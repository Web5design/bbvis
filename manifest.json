{
  "manifest_version": 2,
  "name": "Backbone Vis",
  "description": "Developer Tools extension to inspect & visualize Backbone models & views",
  "version": "1.1",
  "devtools_page": "devtools.html",

  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    "injected.js"
  ]
}
